extends userman.layout

block title
	- string title = "Groups - UserMan Admin Interface";
	
block userman.content
	- import std.algorithm : min, max;
	table
		tr
			th& Name
			th& Description
		- foreach (g; info.groups)
			tr
				td
					a(href="./#{g.id}/")= g.id
				td= g.description

	a(href="?page=1")& First&nbsp;
	- foreach (i; max(1, info.page-3) .. min(info.pageCount, info.page+4))
		a(href="?page=#{i}")= i
		| &nbsp;
	a(href="?page=info.pageCount")& Last
